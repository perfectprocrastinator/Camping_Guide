<h1>new comment file</h1>
<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;display: block;width: 100%" >Add New Comment to <%= campground.name%></h1>
        <div style="width: 30%;margin: 25px auto;">
            <form action="/campground/<%= campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comment" name="comment[text]"><!-- Nice thing to look at,here complete object is send as a whiole -->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="author" name="comment[author]">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/campground">GO BACK</a>
        </div>
    </div>

</div>

